<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Players</title>
    <script src="https://code.jquery.com/jquery-3.4.1.js" integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU=" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<body>

<%- include('../include/navbar'); %>

<div class='container mt-5'>
    <div class='row mt-3'>
        <div class='col'>
            <table class="table">
              <thead class="thead-dark">
                <tr>
                  <th scope="col">Id</th>
                  <th scope="col">Name</th>
                  <th scope="col">Email</th>
                  <th scope="col">Game Win</th>
                  <th scope="col">Game Lost</th>
                  <th scope="col">Created At</th>
                  <th scope="col"></th>
                  <th scope="col"></th>
                </tr>
              </thead>
              <tbody>
                  <% if (players) { %>
                      <% for (i=0; i < players.length; i++) { %>
                      <tr>
                        <th scope="row"><%= players[i].id %></th>
                        <td><%= players[i].name %></td>
                        <td><%= players[i].email %></td>
                        <td><%= players[i].gameWin %></td>
                        <td><%= players[i].gameLost %></td>
                        <td><%= players[i].createdAt %></td>
                        <td><a class="btn btn-success" href="./players/<%= players[i].id %>" >More</a></td>
                          <td><button class="btn btn-danger delete" data-id="<%= players[i].id %>">Delete</button></td>
                      </tr>
                      <% } %>
                   <% } %>
              </tbody>
            </table>
        </div>
    </div>
</div>




</body>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

<script>
    $('.delete').click(function() {
        const player = $(this).data("id");
        $.ajax({
            url: '/players/' + player,
            type: 'DELETE',
        })
        location.reload();
    })
</script>
</html>