<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Edit Game</title>
    <script src="https://code.jquery.com/jquery-3.4.1.js" integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU=" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>

<body>
<%- include('../include/navbar'); %>

<div class="container mt-5">
    <h2>Edit Game : <%= game.name %> </h2>
    <form action="new.html" method="POST">
        <div class="form-group">
            <div class="form-group">
                <label>Name</label>
                <input class="form-control" type="text" placeholder="Name" name="name" id="name">
            </div>
            <label for="exampleFormControlSelect1">GameMode</label>
            <select class="form-control" id="mode" name="mode">
                <option>around-the-world</option>
                <option>301</option>
                <option>cricket</option>
            </select>
        </div>
        <div class="form-group">
            <label for="exampleFormControlSelect1">Status</label>
            <select class="form-control" id="status" name="status">
                <option>Started</option>
                <option>Ended</option>
                <option>Draft</option>
            </select>
        </div>
        <button type="button" class="btn btn-primary patch">Submit</button>
    </form>
</div>

</body>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

<script>
    $('.patch').click(function() {
        const name = $("#name").val();
        const mode = $("#mode").val();
        const status = $("#status").val();

        let data = { "name" : name, "mode" : mode, "status" : status}
        location.reload();
        $.ajax({
            url: '/games/<% if (game) { %><%= game.id %><% } %>',
            type: 'PATCH',
            data: data,
        })

    })
</script>
</html>